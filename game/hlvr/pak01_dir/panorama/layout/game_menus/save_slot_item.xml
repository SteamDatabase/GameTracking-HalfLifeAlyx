        <Panel class="button_bullet">
          <Image class="button_bullet button_bullet_normal" src="s2r://panorama/images/game_menu_ui/btn_bullet_child_page_png.vtex" />
          <Image class="button_bullet button_bullet_continue_slot" src="s2r://panorama/images/game_menu_ui/btn_bullet_focused_png.vtex" />

<root>
	<styles>
    <include src="s2r://panorama/styles/game_menus/game_menu_main.vcss_c" />
		<include src="s2r://panorama/styles/language_shared.vcss_c" />
	</styles>

  <HLVRAddonInformationPanel class="addon_info_panel">
    
    <Panel class="col_body">
      <Panel class="header">
        <Label class="header" text="{s:addon_name}" />
      </Panel>

      <Panel class="addon_spacer" />

      <Panel class="row">
        <Panel class="addon_col_body">
          <Label class="addon_body_copy" text="{s:addon_description}" />
        </Panel>

        <Panel class="addon_col_body">
          <Image id="ItemThumbImage" class="addon_screenshot" />

          <Label class="addon_credits" text="{s:author_heading} : {s:author_name}" />

          <Label class="addon_credits" text="{s:tags_desc}" />

          <Panel class="addon_spacer" />
          
          <Label class="addon_credits" text="{s:upvote_heading} : {d:upvote_count}" />

          <Label class="addon_credits" text="{s:downvote_heading} : {d:downvote_count}" />
          
          <Panel class="row">
            <Button class="addon_vote_button" >
              <Label class="cta" text="UpVote" onactivate="AddonUpVoteButton()"/>
            </Button>
            <Button class="addon_vote_button" onactivate="AddonDownVoteButton()">
              <Label class="cta" text="DnVote" />
            </Button>
          </Panel>
          
        </Panel>

       
      </Panel>

      <Panel class="addon_spacer" />

      <Panel class="addon_spacer" />
    </Panel>
    
  </HLVRAddonInformationPanel>
</root>

<root>
	<styles>
    <include src="s2r://panorama/styles/game_menus/game_menu_main.vcss_c" />
    <include src="s2r://panorama/styles/game_menus/game_menu_sibling.vcss_c" />
		<include src="s2r://panorama/styles/language_shared.vcss_c" />
	</styles>

  <GameMenuPanel class="game_menu_root">
    <Panel class="base_container_sibling" id="layout_root">
      <Panel id="background_panel">
        
        <Panel id="save_info_container" class="base_info_panel_collapse">
          <Panel class="header_info_panel" />
          <Panel class="empty_row" />
          <Panel class="row">
            <Panel class="col_body_sibling">
              <Panel class="info_body">
              <Image id="ItemThumbImage" class="ScreenshotThumb" />
              <Panel class="label save_info">
                <Panel class="stats_container">
                  <Panel class="row">
                    <Panel class="stats_col_hp_header">
                      <Label class="stats" text="#HLVR_MainMenu_HP"/>
                    </Panel>
                    <Panel class="stats_col_resin_header">
                      <Label class="stats" text="#HLVR_MainMenu_Resin"/>
                    </Panel>
                    <Panel class="stats_col_pocket_l_header">
                      <Label class="stats" text="#HLVR_Sibling_L"/>
                    </Panel>
                    <Panel class="stats_col_pocket_r_header">
                      <Label class="stats" text="#HLVR_Sibling_R"/>
                    </Panel>
                  </Panel>
                  <Panel class="row">
                    <Panel class="stats_col_hp">
                      <!--<Label class="stats_value" text="{s:health}"/>-->
                      <Panel id="HeartContainer" class="Container_Hearts">
                        <Panel id="health_heart_1" class="Icon_Heart health_icon_0" />
                        <Panel id="health_heart_2" class="Icon_Heart health_icon_0" />
                        <Panel id="health_heart_3" class="Icon_Heart health_icon_0" />
                      </Panel>
                    </Panel>
                    <Panel class="stats_col_resin">
                      <Label class="stats_value" text="{s:currency}"/>
                    </Panel>
                    <Panel class="stats_col_pocket_l">
                      <Panel id="left_wrist"/>
                    </Panel>
                    <Panel class="stats_col_pocket_r">
                      <Panel id="right_wrist"/>
                    </Panel>
                  </Panel>
                </Panel>
                <Panel class="stats_container">
                  <Panel class="row">
                    <Panel class="stats_col_weapon_1_header">
                      <Label class="stats" text="{s:pistol}"/>
                    </Panel>
                    <Panel class="stats_col_weapon_2_header">
                      <Label class="stats" text="{s:shotgun}"/>
                    </Panel>
                    <Panel class="stats_col_weapon_3_header">
                      <Label class="stats" text="{s:rapidfire}"/>
                    </Panel>
                  </Panel>
                  <Panel class="row">
                    <Panel class="stats_col_weapon_1">
                      <Label class="stats_value" text="{s:pistol_ammo}"/>
                    </Panel>
                    <Panel class="stats_col_weapon_2">
                      <Label class="stats_value" text="{s:shotgun_ammo}"/>
                    </Panel>
                    <Panel class="stats_col_weapon_3">
                      <Label class="stats_value" text="{s:rapidfire_ammo}"/>
                    </Panel>
                  </Panel>
                  <Panel class="row">
                    <Panel class="col_body_sibling">
                      <Panel class="label">
                        <Label class="addon_list" text="{s:addon_list}"/>
                      </Panel>
                    </Panel>
                  </Panel>
                  
                </Panel>
              </Panel>
            </Panel>
            </Panel>
          </Panel>
          <Panel class="empty_row" />
          <Panel class="empty_row_bottomR_corner" />
        </Panel>
      
			  <Panel id="photo_mode_container" class="base_info_panel_collapse">
				<Panel id="background_panel">
					<Panel class="header_info_panel" />
					<Panel class="empty_row" />
					<Panel class="row">
						<Panel class="col_body_sibling">
							<Panel class="info_body">
								<Image id="PhotoModeThumbImage" class="ScreenshotThumb" />
							</Panel>
						</Panel>
					</Panel>
					<Panel class="empty_row" />
					<Panel class="empty_row_bottomR_corner" />
				</Panel>
			</Panel>

  			<Panel id="newgame_info_container" class="base_info_panel_collapse">
        <Panel class="header_info_panel" />
        <Panel class="empty_row" />
        <Panel class="info_body">
          <Panel class="row">
            <Panel class="col_body_sibling">
              <Panel class="label">
                <Label class="body_copy" text="{s:options_desc}"/>
              </Panel>
            </Panel>
          </Panel>
        </Panel>
        <Panel class="empty_row" />
        <Panel class="empty_row_bottomR_corner" />
      </Panel>

        <Panel id="chapter_item_container_01" class="base_info_panel_collapse">
          <Panel class="header_info_panel" />
          <Panel class="empty_row" />
          <Panel class="info_body">
            <Panel class="row">
              <Panel class="col_body_sibling">
                <Image id="ChapterImage" class="ScreenshotThumb" />
                <Panel class="label">
                  <Label class="body_copy" text="{s:image_desc}"/>
                </Panel>               
              </Panel>
            </Panel>
          </Panel>
          <Panel class="empty_row" />
          <Panel class="empty_row_bottomR_corner" />
        </Panel>

        <Panel id="override_newgame_item_container" class="base_info_panel_collapse">
          <Panel class="header_info_panel" />
          <Panel class="empty_row" />
          <Panel class="info_body">
            <Panel class="row">
              <Panel class="col_body_sibling">
                <Panel class="label">
                  <Label class="body_copy" text="#HLVR_MainMenu_Overwrite_desc"/>
                </Panel>
              </Panel>
            </Panel>
          </Panel>
          <Panel class="empty_row" />
          <Panel class="empty_row_bottomR_corner" />
        </Panel>

        <Panel id="options_information" class="base_info_panel_collapse">
          <Panel class="header_info_panel" />
          <Panel class="empty_row" />
          <Panel class="info_body">
            <Panel class="row">
              <Panel class="col_body_sibling">
                <Panel class="label">
                  <Label class="body_copy" text="{s:options_desc}"/>
                </Panel>
              </Panel>
            </Panel>
          </Panel>
          <Panel class="empty_row" />
          <Panel class="empty_row_bottomR_corner" />
        </Panel>
        
      </Panel>
		</Panel>
	</GameMenuPanel>
</root>
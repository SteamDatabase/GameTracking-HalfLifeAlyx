    <include src="s2r://panorama/styles/language_shared.vcss_c" />
	</styles>

	<ClientUIDialogPanel class="RootPanel">
		<HLVRCombineConsole class="CombineConsole" id="CombineConsole">

			<Panel id="ConsoleInterior">
				<Panel id="scan_line_mask">
